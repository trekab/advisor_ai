<div class="form-container">
  <div class="form-header">
    <h1>Create New Instruction</h1>
    <p>Add a custom instruction for your AI assistant</p>
  </div>

  <div class="form-card">
    <%= form_with model: @instruction, local: true do |form| %>
      <div class="form-group">
        <%= form.label :content, "Instruction Content", class: "form-label" %>
        <%= form.text_area :content, 
            placeholder: "Enter your custom instruction for the AI assistant...", 
            class: "form-input form-textarea",
            rows: 8 %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Create Instruction", class: "btn btn-primary" %>
        <%= link_to "Cancel", instructions_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div> 